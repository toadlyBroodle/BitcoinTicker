<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_table_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".BitcoinTickerFragment">

    <TableRow
        android:id="@+id/table_row_last_update_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:gravity="end"
        android:weightSum="6">

        <TextView
            android:id="@+id/textview_last_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:layout_marginEnd="10sp"
            android:text="@string/loading"
            android:textColor="@color/orange"
            android:textSize="16sp"
            android:gravity="end"
            android:layout_column="5"/>

        <TextView
            android:id="@+id/textview_update_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:layout_marginEnd="10sp"
            android:layout_marginStart="0sp"
            android:text="@string/sync_symbol"
            android:textColor="@color/orange"
            android:textSize="28sp"
            android:gravity="end"
            android:layout_column="6"/>

    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_weight="1"
            android:padding="5sp"
            android:text="@string/metric"
            android:textColor="@color/orange"
            android:textSize="26sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_weight="1"
            android:padding="5sp"
            android:text="@string/value"
            android:textColor="@color/orange"
            android:textSize="26sp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/textview_day_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_weight="1"
            android:text="@string/day_change"
            android:textColor="@color/orange"
            android:textSize="26sp"
            android:textStyle="bold"
            android:padding="5sp"
            android:gravity="center_horizontal"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4">

        <TextView
            android:id="@+id/textview_btcprice_units"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_weight="1"
            android:padding="5sp"
            android:text="@string/usd_btc"
            android:textColor="@color/orange"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/textview_btcprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_weight="1"
            android:text="@string/loading"
            android:textColor="@color/orange"
            android:textSize="24sp"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/textview_day_change_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_weight="1"
            android:text="@string/loading"
            android:textColor="@color/orange"
            android:textSize="24sp"
            android:gravity="center_horizontal"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4">

        <TextView
            android:id="@+id/textview_day_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_weight="1"
            android:padding="5sp"
            android:text="@string/day_volume"
            android:textColor="@color/orange"
            android:textSize="24sp"/>
        <TextView
            android:id="@+id/textview_day_volume_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_weight="1"
            android:text="@string/loading"
            android:textColor="@color/orange"
            android:textSize="24sp"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/textview_day_volume_day_change_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_weight="1"
            android:text="@string/loading"
            android:textColor="@color/orange"
            android:textSize="24sp"
            android:gravity="center_horizontal"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4">

        <TextView
            android:id="@+id/textview_market_cap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_weight="1"
            android:padding="5sp"
            android:text="@string/market_cap"
            android:textColor="@color/orange"
            android:textSize="24sp"/>
        <TextView
            android:id="@+id/textview_market_cap_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_weight="1"
            android:text="@string/loading"
            android:textColor="@color/orange"
            android:textSize="24sp"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/textview_market_cap_day_change_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_weight="1"
            android:text="@string/loading"
            android:textColor="@color/orange"
            android:textSize="24sp"
            android:gravity="center_horizontal"/>
    </TableRow>

</TableLayout>
