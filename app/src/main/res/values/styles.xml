<resources>
    <style name="Widget.BitcoinTicker.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
    </style>

    <style name="SettingsHeaderText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?android:colorPrimary</item>
        <item name="android:textSize">@dimen/settings_header_text_size</item>
        <item name="android:padding">@dimen/main_text_padding</item>
    </style>

    <style name="SpinnerItemStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="MainMetricHeaderText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?android:colorPrimary</item>
        <item name="android:textSize">@dimen/main_metric_header_text_size</item>
        <item name="android:padding">@dimen/main_text_padding</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="MainMetricLabelText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?android:colorPrimary</item>
        <item name="android:textSize">@dimen/main_metric_label_text_size</item>
        <item name="android:padding">@dimen/main_text_padding</item>
        <item name="android:paddingStart">@dimen/main_metric_label_padding_start</item>
        <item name="android:gravity">start</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="MainMetricText" parent="TextAppearance.AppCompat">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">?android:colorPrimary</item>
        <item name="android:textSize">@dimen/main_metric_text_size</item>
        <item name="android:padding">@dimen/main_text_padding</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Widget.BitcoinTicker.AppWidget.InnerView" parent="android:Widget">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">?android:colorPrimary</item>
    </style>

    <style name="WidgetMetricHeaderText" parent="TextAppearance.AppCompat">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/widget_metric_header_text_width</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">@dimen/widget_metric_label_text_size</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">@dimen/widget_metric_header_text_padding_start</item>
        <item name="android:paddingEnd">@dimen/widget_metric_header_text_padding_end</item>
    </style>

    <style name="WidgetMetricHeaderDeltaText" parent="TextAppearance.AppCompat">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/widget_metric_delta_text_width</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">@dimen/widget_metric_label_text_size</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">@dimen/widget_metric_header_text_padding_start</item>
        <item name="android:paddingEnd">@dimen/widget_metric_header_text_padding_end</item>
    </style>

    <style name="WidgetMetricLabelText" parent="TextAppearance.AppCompat">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/widget_metric_header_text_width</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">@dimen/widget_metric_label_text_size</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingEnd">@dimen/widget_metric_label_text_padding_end</item>
        <item name="android:paddingStart">@dimen/widget_metric_label_text_padding_start</item>
    </style>

    <style name="WidgetMetricText" parent="TextAppearance.AppCompat">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/widget_metric_header_text_width</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">@dimen/widget_metric_text_size</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="WidgetMetricDeltaText" parent="TextAppearance.AppCompat">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/widget_metric_delta_text_width</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">@dimen/widget_metric_text_size</item>
        <item name="android:maxLines">1</item>
    </style>

</resources>