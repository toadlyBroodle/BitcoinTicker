<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".BitcoinTickerFragment">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp"
        android:weightSum="4">

        <TextView
            android:id="@+id/textview_btcprice_units"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_weight="1"
            android:padding="5sp"
            android:text="@string/usd_btc"
            android:textColor="@color/orange"
            android:textSize="28sp"
            android:gravity="center_horizontal"/>

        <TextView
            android:layout_column="2"
            android:id="@+id/textview_day_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/day_change"
            android:textColor="@color/orange"
            android:textSize="28sp"
            android:padding="5sp"
            android:layout_weight="1"
            android:gravity="center_horizontal"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4">
        <TextView
            android:layout_column="1"
            android:id="@+id/textview_btcprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            android:textColor="@color/orange"
            android:textSize="28sp"
            android:layout_weight="1"
            android:gravity="center_horizontal"/>

        <TextView
            android:layout_column="2"
            android:id="@+id/textview_day_change_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            android:textColor="@color/orange"
            android:textSize="28sp"
            android:layout_weight="1"
            android:gravity="center_horizontal"/>
    </TableRow>
</TableLayout>
