<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/widget_background_layout"
    android:background="@color/black"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/widget_metric_update"
            android:layout_width="@dimen/widget_metric_header_text_width"
            android:text="@string/sync_symbol"
            android:textSize="16sp"
            android:textAlignment="viewEnd"
            style="@style/WidgetMetricHeaderText"/>

        <TextView
            android:id="@+id/widget_last_update_time"
            android:layout_width="@dimen/widget_metric_header_text_width"
            android:textSize="@dimen/widget_last_update_text_size"
            android:text="@string/loading"
            style="@style/WidgetMetricHeaderText"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/widget_textview_delta_day"
            android:contentDescription="@string/delta_day"
            android:text="@string/delta_day"
            style="@style/WidgetMetricHeaderDeltaText"/>

        <TextView
            android:id="@+id/widget_textview_delta_week"
            android:contentDescription="@string/delta_week"
            android:text="@string/delta_week"
            style="@style/WidgetMetricHeaderDeltaText"/>

        <TextView
            android:id="@+id/widget_textview_delta_month"
            android:contentDescription="@string/delta_month"
            android:text="@string/delta_month"
            style="@style/WidgetMetricHeaderDeltaText"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/widget_textview_price"
            android:contentDescription="@string/usd_btc"
            android:text="@string/usd_btc"
            style="@style/WidgetMetricLabelText" />

        <TextView
            android:id="@+id/widget_textview_price_value"
            android:contentDescription="@string/usd_btc"
            android:text="@string/loading"
            style="@style/WidgetMetricText"/>

        <TextView
            android:id="@+id/widget_textview_price_delta_day_value"
            android:contentDescription="@string/delta_day"
            android:text="@string/loading"
            style="@style/WidgetMetricDeltaText"/>

        <TextView
            android:id="@+id/widget_textview_price_delta_week_value"
            android:contentDescription="@string/delta_week"
            android:text="@string/loading"
            style="@style/WidgetMetricDeltaText"/>

        <TextView
            android:id="@+id/widget_textview_price_delta_month_value"
            android:contentDescription="@string/delta_month"
            android:text="@string/loading"
            style="@style/WidgetMetricDeltaText"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/widget_textview_market_cap"
            android:contentDescription="@string/market_cap"
            android:text= "@string/market_cap"
            style="@style/WidgetMetricLabelText"/>

        <TextView
            android:id="@+id/widget_textview_market_cap_value"
            android:contentDescription="@string/market_cap"
            android:text="@string/loading"
            style="@style/WidgetMetricText"/>

        <TextView
            android:id="@+id/widget_textview_market_cap_delta_day_value"
            android:contentDescription="@string/market_cap"
            android:text="@string/loading"
            style="@style/WidgetMetricDeltaText"/>

        <TextView
            android:id="@+id/widget_textview_market_cap_delta_week_value"
            android:contentDescription="@string/market_cap"
            android:text="@string/loading"
            style="@style/WidgetMetricDeltaText"/>

        <TextView
            android:id="@+id/widget_textview_market_cap_delta_month_value"
            android:contentDescription="@string/market_cap"
            android:text="@string/loading"
            style="@style/WidgetMetricDeltaText"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/widget_textview_volume"
            android:contentDescription="@string/day_volume"
            android:text= "@string/day_volume"
            style="@style/WidgetMetricLabelText"/>

        <TextView
            android:id="@+id/widget_textview_volume_value"
            android:contentDescription="@string/day_volume"
            android:text="@string/loading"
            style="@style/WidgetMetricText"/>

        <TextView
            android:id="@+id/widget_textview_volume_delta_day_value"
            android:contentDescription="@string/delta_day"
            android:text="@string/loading"
            style="@style/WidgetMetricDeltaText"/>

        <TextView
            android:id="@+id/widget_textview_volume_delta_week_value"
            android:contentDescription="@string/delta_day"
            android:text="@string/loading"
            style="@style/WidgetMetricDeltaText"/>

        <TextView
            android:id="@+id/widget_textview_volume_delta_month_value"
            android:contentDescription="@string/delta_day"
            android:text="@string/loading"
            style="@style/WidgetMetricDeltaText"/>
    </LinearLayout>

</LinearLayout>
